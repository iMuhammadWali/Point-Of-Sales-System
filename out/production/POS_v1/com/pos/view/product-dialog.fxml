<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.controller.ProductDialogController" spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-pref-width: 400;">

    <!-- Dialog Title -->
    <Label style="-fx-text-fill: #272848;" text="Add New Product">
        <font>
            <Font name="SofiaPro-SemiBold" size="20.0" />
        </font>
    </Label>

    <!-- Form Fields -->
    <VBox spacing="15">
        <!-- Product ID -->
        <VBox spacing="5">
            <Label style="-fx-text-fill: #666;" text="Product ID *">
                <font>
                    <Font name="SofiaPro-Regular" size="12.0" />
                </font>
            </Label>
            <TextField fx:id="productIdField" promptText="Enter product ID" styleClass="login-field" />
        </VBox>

        <!-- Product Name -->
        <VBox spacing="5">
            <Label style="-fx-text-fill: #666;" text="Product Name *">
                <font>
                    <Font name="SofiaPro-Regular" size="12.0" />
                </font>
            </Label>
            <TextField fx:id="nameField" promptText="Enter product name" styleClass="login-field" />
        </VBox>

        <!-- Category -->
        <VBox spacing="5">
            <Label style="-fx-text-fill: #666;" text="Category *">
                <font>
                    <Font name="SofiaPro-Regular" size="12.0" />
                </font>
            </Label>
            <ComboBox fx:id="categoryComboBox" promptText="Select category" styleClass="login-field" />
        </VBox>

        <!-- Price and Quantity -->
        <HBox spacing="15">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label style="-fx-text-fill: #666;" text="Price (PKR) *">
                    <font>
                        <Font name="SofiaPro-Regular" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="priceField" promptText="0.00" styleClass="login-field" />
            </VBox>

            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label style="-fx-text-fill: #666;" text="Quantity *">
                    <font>
                        <Font name="SofiaPro-Regular" size="12.0" />
                    </font>
                </Label>
                <Spinner fx:id="quantitySpinner" styleClass="login-field" />
            </VBox>
        </HBox>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" onAction="#handleCancel" style="-fx-background-color: transparent; -fx-border-color: #666; -fx-border-radius: 8; -fx-text-fill: #666; -fx-padding: 10 20;" text="Cancel">
            <font>
                <Font name="SofiaPro-Regular" size="14.0" />
            </font>
        </Button>
        <Button fx:id="saveButton" onAction="#handleSave" style="-fx-background-color: #6D71F9; -fx-background-radius: 8; -fx-text-fill: white; -fx-padding: 10 20;" text="Save Product">
            <font>
                <Font name="SofiaPro-Medium" size="14.0" />
            </font>
        </Button>
    </HBox>
</VBox>