<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.controller.CustomerDialogController" spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-pref-width: 400;">

    <!-- Dialog Title -->
    <Label style="-fx-text-fill: #272848;" text="Add New Customer">
        <font>
            <Font name="SofiaPro-SemiBold" size="20.0" />
        </font>
    </Label>

    <!-- Form Fields -->
    <VBox spacing="15">
        <!-- Customer ID -->
        <VBox spacing="5">
            <Label style="-fx-text-fill: #666;" text="Customer ID *">
                <font>
                    <Font name="SofiaPro-Regular" size="12.0" />
                </font>
            </Label>
            <TextField fx:id="customerIdField" promptText="Enter customer ID" styleClass="login-field" />
        </VBox>

        <!-- Customer Name -->
        <VBox spacing="5">
            <Label style="-fx-text-fill: #666;" text="Full Name *">
                <font>
                    <Font name="SofiaPro-Regular" size="12.0" />
                </font>
            </Label>
            <TextField fx:id="nameField" promptText="Enter full name" styleClass="login-field" />
        </VBox>

        <!-- Phone and Email -->
        <HBox spacing="15">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label style="-fx-text-fill: #666;" text="Phone *">
                    <font>
                        <Font name="SofiaPro-Regular" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="phoneField" promptText="0300-1234567" styleClass="login-field" />
            </VBox>

            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label style="-fx-text-fill: #666;" text="Email">
                    <font>
                        <Font name="SofiaPro-Regular" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="emailField" promptText="email@example.com" styleClass="login-field" />
            </VBox>
        </HBox>

        <!-- Loyalty Points -->
        <VBox spacing="5">
            <Label style="-fx-text-fill: #666;" text="Loyalty Points">
                <font>
                    <Font name="SofiaPro-Regular" size="12.0" />
                </font>
            </Label>
            <Spinner fx:id="loyaltyPointsSpinner" styleClass="login-field" />
        </VBox>

        <!-- Notes -->
        <VBox spacing="5">
            <Label style="-fx-text-fill: #666;" text="Notes">
                <font>
                    <Font name="SofiaPro-Regular" size="12.0" />
                </font>
            </Label>
            <TextArea fx:id="notesArea" promptText="Enter any notes about this customer..." style="-fx-pref-height: 80; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #E1E1E1; -fx-border-width: 1.5; -fx-padding: 8 12;" />
        </VBox>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" onAction="#handleCancel" style="-fx-background-color: transparent; -fx-border-color: #666; -fx-border-radius: 8; -fx-text-fill: #666; -fx-padding: 10 20;" text="Cancel">
            <font>
                <Font name="SofiaPro-Regular" size="14.0" />
            </font>
        </Button>
        <Button fx:id="saveButton" onAction="#handleSave" style="-fx-background-color: #6D71F9; -fx-background-radius: 8; -fx-text-fill: white; -fx-padding: 10 20;" text="Save Customer">
            <font>
                <Font name="SofiaPro-Medium" size="14.0" />
            </font>
        </Button>
    </HBox>
</VBox>