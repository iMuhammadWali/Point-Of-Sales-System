<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pos.controller.CustomerController"
            prefWidth="800" prefHeight="500"
            style="-fx-background-color: #141414; -fx-font-family: 'Urbanist'; -fx-font-size: 14px;">

    <!-- TOP SEARCH BAR -->
    <HBox fx:id="searchBar" spacing="10" layoutX="20" layoutY="20">
        <TextField fx:id="searchField" promptText="Search customer by name or phone..." prefWidth="400"
                   style="-fx-background-color: #fbf8ef; -fx-text-fill: #141414; -fx-font-family: 'Urbanist';"/>
        <Button text="Search" onAction="#handleSearch"
                style="-fx-background-color: #c7ff10; -fx-text-fill: #141414; -fx-font-family: 'Urbanist';"/>
    </HBox>

    <!-- CENTER CUSTOMER TABLE -->
    <TableView fx:id="customerTable" layoutX="20" layoutY="70" prefWidth="500" prefHeight="400"
               style="-fx-background-color: #fbf8ef; -fx-font-family: 'Urbanist'; -fx-text-fill: #141414;">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
            <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="120"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
        </columns>
    </TableView>

    <!-- RIGHT DETAILS PANEL -->
    <VBox fx:id="detailsPanel" spacing="8" layoutX="550" layoutY="70" prefWidth="230" prefHeight="400"
          style="-fx-background-color: #fbf8ef; -fx-padding: 10; -fx-font-family: 'Urbanist';">
        <Label text="Customer Details" style="-fx-font-size:16; -fx-font-weight:bold;"/>
        <Label fx:id="detailName" text="Name: ---"/>
        <Label fx:id="detailPhone" text="Phone: ---"/>
        <Label fx:id="detailEmail" text="Email: ---"/>
        <Label fx:id="detailPurchases" text="Total Purchases: ---"/>
    </VBox>

</AnchorPane>
