<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pos.controller.LoginController"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: #141414;">

    <!-- Left image panel -->
    <AnchorPane layoutX="0" layoutY="0" prefWidth="200" prefHeight="400"
                style="-fx-background-color: #fbf8ef;">
        <ImageView fitWidth="200" fitHeight="400" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/pos_bg.png"/>
            </image>
        </ImageView>
    </AnchorPane>

    <!-- Top-right logo -->
    <ImageView layoutX="500" layoutY="10" fitWidth="80" fitHeight="80" pickOnBounds="true" preserveRatio="true">
<!--        <image>-->
<!--            <Image url="@Resources/images/pos_logo.png"/>-->
<!--        </image>-->
    </ImageView>

    <!-- Right login panel -->
    <VBox spacing="20" layoutX="220" layoutY="50" prefWidth="350">
        <Label text="LOGIN" style="-fx-font-family: 'Urbanist'; -fx-font-size: 32px; -fx-text-fill: #c7ff10;"/>
        <Label text="Welcome Back" style="-fx-font-family: 'Urbanist'; -fx-font-size: 18px; -fx-text-fill: #fbf8ef;"/>

        <TextField fx:id="usernameField" promptText="Username"
                   style="-fx-font-family: 'Urbanist'; -fx-font-size: 14px; -fx-background-color: #fbf8ef; -fx-text-fill: #141414; -fx-background-radius: 8px; -fx-padding: 8px;"/>
        <PasswordField fx:id="passwordField" promptText="Password"
                       style="-fx-font-family: 'Urbanist'; -fx-font-size: 14px; -fx-background-color: #fbf8ef; -fx-text-fill: #141414; -fx-background-radius: 8px; -fx-padding: 8px;"/>

        <Button text="Login" onAction="#handleLogin"
                style="-fx-font-family: 'Urbanist'; -fx-font-size: 16px; -fx-background-color: #c7ff10; -fx-text-fill: #141414; -fx-background-radius: 20px; -fx-padding: 10 20 10 20;"/>
    </VBox>
</AnchorPane>
