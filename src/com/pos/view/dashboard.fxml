<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.controller.DashboardController">

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="0" style="-fx-background-color: #272848; -fx-pref-width: 250;">
            <!-- Logo -->
            <VBox alignment="CENTER" style="-fx-padding: 30 20 40 20;">
                <Rectangle arcHeight="15" arcWidth="15" fill="#54C1FB" height="60" width="60" />
                <Label style="-fx-text-fill: white; -fx-padding: 15 0 0 0;" text="NexusPOS">
                    <font>
                        <Font name="SofiaPro-SemiBold" size="20.0" />
                    </font>
                </Label>
            </VBox>

            <!-- Navigation Menu -->
            <VBox spacing="5" style="-fx-padding: 0 20 20 20;">
                <Button onAction="#showDashboard" style="-fx-background-color: #6D71F9; -fx-background-radius: 8; -fx-text-fill: white; -fx-padding: 12;" text="Dashboard">
                    <font>
                        <Font name="SofiaPro-Medium" size="14.0" />
                    </font>
                </Button>
                <Button onAction="#showTransactions" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-text-fill: white; -fx-padding: 12;" text="Transactions">
                    <font>
                        <Font name="SofiaPro-Regular" size="14.0" />
                    </font>
                </Button>
                <Button onAction="#showProducts" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-text-fill: white; -fx-padding: 12;" text="Products">
                    <font>
                        <Font name="SofiaPro-Regular" size="14.0" />
                    </font>
                </Button>
                <Button onAction="#showCustomers" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-text-fill: white; -fx-padding: 12;" text="Customers">
                    <font>
                        <Font name="SofiaPro-Regular" size="14.0" />
                    </font>
                </Button>
                <!-- ADDED: Reports & Analytics Button -->
                <Button onAction="#showReports" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-text-fill: white; -fx-padding: 12;" text="Reports">
                    <font>
                        <Font name="SofiaPro-Regular" size="14.0" />
                    </font>
                </Button>
                <Button onAction="#showSettings" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-text-fill: white; -fx-padding: 12;" text="Settings">
                    <font>
                        <Font name="SofiaPro-Regular" size="14.0" />
                    </font>
                </Button>

                <!-- Spacer -->
                <VBox VBox.vgrow="ALWAYS" />

                <!-- Logout -->
                <Button onAction="#logout" style="-fx-background-color: transparent; -fx-border-color: #54C1FB; -fx-border-radius: 8; -fx-text-fill: #54C1FB; -fx-padding: 12;" text="Logout">
                    <font>
                        <Font name="SofiaPro-Regular" size="14.0" />
                    </font>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox spacing="0" style="-fx-background-color: #EFF0F8;">

            <!-- Top Header Bar -->
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 20 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <Label fx:id="welcomeLabel" style="-fx-text-fill: #272848;" text="Welcome back, Hareem!">
                        <font>
                            <Font name="SofiaPro-SemiBold" size="24.0" />
                        </font>
                    </Label>
                    <Label fx:id="currentDateLabel" style="-fx-text-fill: #666;">
                        <font>
                            <Font name="SofiaPro-Regular" size="14.0" />
                        </font>
                    </Label>
                </VBox>

                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="currentTimeLabel" style="-fx-text-fill: #272848;" text="00:00:00">
                        <font>
                            <Font name="SofiaPro-SemiBold" size="18.0" />
                        </font>
                    </Label>
                    <Label style="-fx-text-fill: #666;" text="Logged in as: Hareem (Cashier)">
                        <font>
                            <Font name="SofiaPro-Regular" size="12.0" />
                        </font>
                    </Label>
                </VBox>
            </HBox>

            <!-- Main Content Scroll Area -->
            <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-border-color: transparent;">
                <VBox spacing="20" style="-fx-padding: 30;">

                    <!-- Quick Stats Cards -->
                    <HBox alignment="CENTER" spacing="20">
                        <!-- Today's Sales Card -->
                        <VBox prefHeight="92.0" prefWidth="319.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-pref-width: 250; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                            <Label style="-fx-text-fill: #666;" text="Today's Sales">
                                <font>
                                    <Font name="SofiaPro-Regular" size="14.0" />
                                </font>
                            </Label>
                            <Label fx:id="todaySalesLabel" style="-fx-text-fill: #272848; -fx-padding: 10 0 5 0;" text="PKR 0">
                                <font>
                                    <Font name="SofiaPro-SemiBold" size="28.0" />
                                </font>
                            </Label>
                            <Label style="-fx-text-fill: #54C1FB;" text="+12% from yesterday">
                                <font>
                                    <Font name="SofiaPro-Regular" size="12.0" />
                                </font>
                            </Label>
                        </VBox>

                        <!-- Transactions Today Card -->
                        <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-pref-width: 250; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                            <Label style="-fx-text-fill: #666;" text="Transactions Today">
                                <font>
                                    <Font name="SofiaPro-Regular" size="14.0" />
                                </font>
                            </Label>
                            <Label fx:id="transactionsCountLabel" style="-fx-text-fill: #272848; -fx-padding: 10 0 5 0;" text="0 Orders">
                                <font>
                                    <Font name="SofiaPro-SemiBold" size="28.0" />
                                </font>
                            </Label>
                            <Label style="-fx-text-fill: #54C1FB;" text="Average: PKR 572">
                                <font>
                                    <Font name="SofiaPro-Regular" size="12.0" />
                                </font>
                            </Label>
                        </VBox>

                        <!-- Top Category Card -->
                        <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-pref-width: 250; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                            <Label style="-fx-text-fill: #666;" text="Top Category">
                                <font>
                                    <Font name="SofiaPro-Regular" size="14.0" />
                                </font>
                            </Label>
                            <Label fx:id="topCategoryLabel" style="-fx-text-fill: #272848; -fx-padding: 10 0 5 0;" text="None">
                                <font>
                                    <Font name="SofiaPro-SemiBold" size="28.0" />
                                </font>
                            </Label>
                            <Label style="-fx-text-fill: #54C1FB;" text="35% of total sales">
                                <font>
                                    <Font name="SofiaPro-Regular" size="12.0" />
                                </font>
                            </Label>
                        </VBox>

                        <!-- Low Stock Card -->
                        <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-pref-width: 250; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                            <Label style="-fx-text-fill: #666;" text="Low Stock Items">
                                <font>
                                    <Font name="SofiaPro-Regular" size="14.0" />
                                </font>
                            </Label>
                            <Label fx:id="lowStockLabel" style="-fx-text-fill: #e74c3c; -fx-padding: 10 0 5 0;" text="0 Items">
                                <font>
                                    <Font name="SofiaPro-SemiBold" size="28.0" />
                                </font>
                            </Label>
                            <Label style="-fx-text-fill: #e74c3c;" text="Needs attention">
                                <font>
                                    <Font name="SofiaPro-Regular" size="12.0" />
                                </font>
                            </Label>
                        </VBox>
                    </HBox>

                    <!-- Charts and Tables Section -->
                    <HBox alignment="TOP_LEFT" spacing="20">

                        <!-- Sales Chart Placeholder -->
                        <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-pref-width: 600; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);
                            -fx-max-width: 500">
                            <Label style="-fx-text-fill: #272848;" text="Sales Overview">
                                <font>
                                    <Font name="SofiaPro-SemiBold" size="18.0" />
                                </font>
                            </Label>
                            <Label style="-fx-text-fill: #666; -fx-padding: 0 0 20 0;" text="Last 7 days performance">
                                <font>
                                    <Font name="SofiaPro-Regular" size="14.0" />
                                </font>
                            </Label>

                            <!-- Chart Placeholder -->
                            <HBox alignment="CENTER" style="-fx-background-color: #F8F9FA; -fx-background-radius: 8; -fx-min-height: 250; -fx-padding: 20;">
                                <VBox alignment="CENTER" spacing="10">
                                    <Rectangle arcHeight="10" arcWidth="10" fill="#E1E1E1" height="80" width="80" />
                                    <Label style="-fx-text-fill: #999;" text="Sales Chart Placeholder">
                                        <font>
                                            <Font name="SofiaPro-Regular" size="14.0" />
                                        </font>
                                    </Label>
                                    <Label style="-fx-text-fill: #666;" text="Visual representation coming soon">
                                        <font>
                                            <Font name="SofiaPro-Regular" size="12.0" />
                                        </font>
                                    </Label>
                                </VBox>
                            </HBox>
                        </VBox>

                        <VBox style="-fx-background-color: white;
                             -fx-background-radius: 12;
                             -fx-padding: 25;
                             -fx-min-width: 475;"
                              VBox.vgrow="ALWAYS">

                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label style="-fx-text-fill: #272848;" text="Recent Transactions">
                                    <font>
                                        <Font name="SofiaPro-SemiBold" size="18.0" />
                                    </font>
                                </Label>
                                <Label style="-fx-text-fill: #666;" text="Last 5 transactions">
                                    <font>
                                        <Font name="SofiaPro-Regular" size="14.0" />
                                    </font>
                                </Label>
                            </HBox>

                            <TableView fx:id="recentTransactionsTable"
                                       VBox.vgrow="ALWAYS"
                                       style="-fx-min-width: 445">
<!--                                       -fx-border-color: blue; -fx-border-width: 2; -->
                                <columns>
                                    <TableColumn fx:id="colTransactionId" text="Transaction ID" minWidth="80"/>
                                    <TableColumn fx:id="colTime" text="Time" minWidth="80"/>
                                    <TableColumn fx:id="colAmount" text="Amount" minWidth="90"/>
                                    <TableColumn fx:id="colCashier" text="Cashier" minWidth="80"/>
                                    <TableColumn fx:id="colStatus" text="Status" minWidth="80"/>
                                </columns>
                            </TableView>

                            <Button onAction="#showTransactions"
                                    style="-fx-background-color: transparent;
                   -fx-text-fill: #6D71F9;
                   -fx-padding: 10 0 0 0;"
                                    text="View All Transactions">
                                <font>
                                    <Font name="SofiaPro-Medium" size="14.0" />
                                </font>
                            </Button>

                        </VBox>


                    </HBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>